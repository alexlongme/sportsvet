<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:gravity="bottom|center_horizontal"
	tools:context=".fragment.ShuttleFragment">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="@dimen/_100sdp">

		<com.fini.pro.sportsvet.utils.dialView.DialView
			android:id="@+id/dial_view"
			android:layout_width="@dimen/_180sdp"
			android:layout_height="@dimen/_100sdp"
			android:layout_centerInParent="true"
			app:dialDirection="BOTTOM"
			app:intervalValueOnLine="true"
			app:maxValue="100"
			app:minValue="0"
			app:paintArcColor="@color/black"
			app:paintLineColor="@color/black"
			app:paintTextColor="@color/black"
			app:startColor="@color/transparent"
			app:endColor="@color/transparent"
			app:tickGapAngle="3.6"
			app:textSize="14"
			app:leastCount="1"
			app:lineInterval="5"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center_horizontal"
			android:orientation="vertical">

			<View
				android:layout_width="3dp"
				android:layout_height="50dp"
				android:background="@color/purple1"/>

			<RelativeLayout
				android:layout_width="@dimen/_30sdp"
				android:layout_height="@dimen/_30sdp"
				android:layout_marginTop="@dimen/_5sdp">
				<ImageView
					android:contentDescription="@string/app_name"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:src="@drawable/droplet"/>
				<TextView
					android:id="@+id/tv_value"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginTop="@dimen/_9sdp"
					android:gravity="center"
					android:textColor="@color/purple1"
					android:textSize="@dimen/_8sdp"
					android:textStyle="bold"
					android:text="100"/>
			</RelativeLayout>

			<TextView
				android:id="@+id/tv_apply"
				android:layout_width="@dimen/_70sdp"
				android:layout_height="@dimen/_30sdp"
				android:layout_marginTop="@dimen/_10sdp"
				android:layout_marginBottom="@dimen/_20sdp"
				android:background="@color/purple1"
				android:gravity="center"
				android:fontFamily="@font/poppins_semibold"
				android:text="Apply"
				android:textColor="@color/white"
				android:textSize="@dimen/_12sdp"/>

		</LinearLayout>
	</RelativeLayout>

</LinearLayout>